<div class="skill-card sheet-card" data-type="{{data.type}}" style="background-image: url('systems/torgeternity/images/bgparch.webp')">
    <table style="border:none;background-color:transparent;margin:2px 0px 0px 0px">
    <tr style="border:none">
        <td>
            <img class="actor-icon" src="{{actorPic}}" title="{{name}}" style="width:50px;height:50px" />
            {{log data}}
        </td>
        <td>
            <div width=100%>
                <p class="skill-chat-title">{{chatTitle}}</p>
                <p class="skill-unskilled-label" style="{{unskilledLabel}}">{{localize 'torgeternity.chatText.unskilled'}}</div>
            </div>
        </td>
    </tr>
    </table>
    <div class="chat-text" style="padding:0px">
        <p class="skill-roll-result">{{resultText}}</p>
        <p class="skill-roll-action-label" style="{{actionTotalLabel}}">{{actionTotalContent}}</p>
        <p class="skill-roll-disconnect-label" style="{{disconnectLabel}}">{{localize 'torgeternity.chatText.possibleDisconnect'}}</p>
        <p class="skill-roll-damage-label" style="{{damageLabel}}">
            {{damageDescription}}
        </p>
        <p class="skill-roll-action-label" style="{{damageSubLabel}}">
            {{damageSubDescription}}
        </p>
        <table class="skill-roll-table">
            <tr>
                <td class="skill-roll-table-1">
                    {{typeLabel}}:
                </td>
                <td class="skill-roll-table-2">
                    {{skillValue}}
                </td>
            </tr>

            <tr style="border:1px solid black">
                <td style="background:white">
                    {{localize 'torgeternity.chatText.dieTotal'}} {{combinedRollTotal}}
                </td>
                <td style="background:white">
                </td>
            </tr>

            <tr>
                <td class="skill-roll-table-1">
                    {{localize 'torgeternity.chatText.bonus'}}:
                </td>
                <td class="skill-roll-table-2">
                    <div><span style="{{bonusPlusLabel}}">+</span>{{bonus}}</div>
                </td>
            </tr>

            <tr style="{{modifierLabel}}">
                <td class="skill-roll-table-1">
                    <a class="modifier-label">{{localize 'torgeternity.chatText.modifiers'}}</a>:
                </td>
                <td class="skill-roll-table-2">
                    
                    <div title="{{modifierText}}" style="display:block"><span style="{{modifierPlusLabel}}">+</span>{{modifiers}}</div>
                </td>
            </tr>

            <tr style="{{cardsPlayedLabel}}">
                <td class="skill-roll-table-1">
                    {{localize 'torgeternity.chatText.bonusCard'}}:
                </td>
                <td class="skill-roll-table-2">
                    <div>{{cardsPlayed}}</div>
                </td>
            </tr>

            <tr style="{{notesLabel}}">
                <td class="skill-roll-table-1">
                    {{localize "torgeternity.chatText.notes"}}:
                </td>
                <td class="skill-roll-table-2">
                    <div>{{chatNote}}</div>
                </td>
            </tr>

        </table>

        <div class="skill-roll-menu">
            <a class="roll-possibility" 
                style="{{possibilityStyle}}"
                data-actor="{{actor}}" 
                data-actor-pic="{{actorPic}}" 
                data-actor-type="{{actorType}}"
                data-skill-name="{{skillName}}" 
                data-skill-value="{{skillValue}}" 
                data-test-type="{{testType}}" 
                data-unskilled-use="{{unskilledUse}}" 
                data-skill-adds="{{skillAdds}}" 
                data-skill-base-attribute="{{skillBaseAttribute}}"
                data-roll-total="{{rollTotal}}"
                data-wound-modifier="{{woundModifier}}"
                data-size-modifier="{{sizeModifier}}"
                data-vulnerable-modifier="{{vulnerableModifier}}"
                data-stymied-modifier="{{stymiedModifier}}"
                data-possibility-total="{{possibilityTotal}}"
                data-up-total="{{upTotal}}"
                data-hero-total = "{{heroTotal}}"
                data-drama-total = "{{dramaTotal}}"
                data-cards-played = "{{cardsPlayed}}"
                data-damage = "{{damage}}"
                data-power-attack="{{powerAttack}}"
            >
            {{localize 'torgeternity.chatText.possibility'}}
            </a>
            &nbsp;&bull;&nbsp;
            <a class="roll-up"
                style="{{upStyle}}"
                data-actor="{{actor}}" 
                data-actor-pic="{{actorPic}}" 
                data-actor-type="{{actorType}}"
                data-skill-name="{{skillName}}" 
                data-skill-value="{{skillValue}}" 
                data-test-type="{{testType}}" 
                data-unskilled-use="{{unskilledUse}}" 
                data-skill-adds="{{skillAdds}}" 
                data-skill-base-attribute="{{skillBaseAttribute}}"
                data-roll-total="{{rollTotal}}"
                data-wound-modifier="{{woundModifier}}"
                data-stymied-modifier="{{stymiedModifier}}"
                data-size-modifier="{{sizeModifier}}"
                data-vulnerable-modifier="{{vulnerableModifier}}"
                data-possibility-total="{{possibilityTotal}}"
                data-up-total="{{upTotal}}"
                data-hero-total = "{{heroTotal}}"
                data-drama-total = "{{dramaTotal}}"
                data-cards-played = "{{cardsPlayed}}"
                data-damage = "{{damage}}"
                data-power-attack="{{powerAttack}}"            
            >
            {{localize 'torgeternity.chatText.up'}}
            </a>
            <span style="{{heroStyle}}">&nbsp;&bull;&nbsp;</span>
            <a class="roll-hero"
                style="{{heroStyle}}"
                data-actor="{{actor}}" 
                data-actor-pic="{{actorPic}}" 
                data-actor-type="{{actorType}}"
                data-skill-name="{{skillName}}" 
                data-skill-value="{{skillValue}}" 
                data-test-type="{{testType}}" 
                data-unskilled-use="{{unskilledUse}}" 
                data-skill-adds="{{skillAdds}}" 
                data-skill-base-attribute="{{skillBaseAttribute}}"
                data-roll-total="{{rollTotal}}"
                data-wound-modifier="{{woundModifier}}"
                data-stymied-modifier="{{stymiedModifier}}"
                data-size-modifier="{{sizeModifier}}"
                data-vulnerable-modifier="{{vulnerableModifier}}"
                data-possibility-total="{{possibilityTotal}}"
                data-up-total="{{upTotal}}"
                data-hero-total = "{{heroTotal}}"
                data-drama-total = "{{dramaTotal}}"
                data-cards-played = "{{cardsPlayed}}"
                data-damage = "{{damage}}"
                data-power-attack="{{powerAttack}}"
             >
             {{localize 'torgeternity.chatText.hero'}}
             </a>
            <span style="{{heroStyle}}">&nbsp;&bull;&nbsp;</span>
            <a class="roll-drama"
                style="{{dramaStyle}}"
                data-actor="{{actor}}" 
                data-actor-pic="{{actorPic}}" 
                data-actor-type="{{actorType}}"
                data-skill-name="{{skillName}}" 
                data-skill-value="{{skillValue}}" 
                data-test-type="{{testType}}" 
                data-unskilled-use="{{unskilledUse}}" 
                data-skill-adds="{{skillAdds}}" 
                data-skill-base-attribute="{{skillBaseAttribute}}"
                data-roll-total="{{rollTotal}}"
                data-wound-modifier="{{woundModifier}}"
                data-stymied-modifier="{{stymiedModifier}}"
                data-size-modifier="{{sizeModifier}}"
                data-vulnerable-modifier="{{vulnerableModifier}}"
                data-possibility-total="{{possibilityTotal}}"
                data-up-total="{{upTotal}}"
                data-hero-total = "{{heroTotal}}"
                data-drama-total = "{{dramaTotal}}"
                data-cards-played = "{{cardsPlayed}}"
                data-damage = "{{damage}}"
                data-power-attack = "{{powerAttack}}"            
            >
            {{localize 'torgeternity.chatText.drama'}}
            </a>
            <span style="{{dramaStyle}}">&nbsp;&bull;&nbsp;</span>
            <a class="add-plus3"
                style="{{plus3Style}}"
                data-actor="{{actor}}" 
                data-actor-pic="{{actorPic}}" 
                data-actor-type="{{actorType}}"
                data-skill-name="{{skillName}}" 
                data-skill-value="{{skillValue}}" 
                data-test-type="{{testType}}" 
                data-unskilled-use="{{unskilledUse}}" 
                data-skill-adds="{{skillAdds}}" 
                data-skill-base-attribute="{{skillBaseAttribute}}"
                data-roll-total="{{rollTotal}}"
                data-wound-modifier="{{woundModifier}}"
                data-stymied-modifier="{{stymiedModifier}}"
                data-size-modifier="{{sizeModifier}}"
                data-vulnerable-modifier="{{vulnerableModifier}}"
                data-possibility-total="{{possibilityTotal}}"
                data-up-total="{{upTotal}}"
                data-hero-total = "{{heroTotal}}"
                data-drama-total = "{{dramaTotal}}"
                data-cards-played = "{{cardsPlayed}}"
                data-damage = "{{damage}}"            
                data-power-attack = "{{powerAttack}}"            
            >
            {{localize 'torgeternity.chatText.bonusCard'}}
            </a>
            <span style="{{bdStyle}}">&nbsp;&bull;&nbsp;</span>
            <a class="add-bd"
                style="{{bdStyle}}"
                data-actor="{{actor}}" 
                data-actor-pic="{{actorPic}}" 
                data-actor-type="{{actorType}}"
                data-skill-name="{{skillName}}" 
                data-skill-value="{{skillValue}}" 
                data-test-type="{{testType}}" 
                data-unskilled-use="{{unskilledUse}}" 
                data-skill-adds="{{skillAdds}}" 
                data-skill-base-attribute="{{skillBaseAttribute}}"
                data-roll-total="{{rollTotal}}"
                data-wound-modifier="{{woundModifier}}"
                data-stymied-modifier="{{stymiedModifier}}"
                data-size-modifier="{{sizeModifier}}"
                data-vulnerable-modifier="{{vulnerableModifier}}"
                data-possibility-total="{{possibilityTotal}}"
                data-up-total="{{upTotal}}"
                data-hero-total = "{{heroTotal}}"
                data-drama-total = "{{dramaTotal}}"
                data-cards-played = "{{cardsPlayed}}"
                data-damage = "{{damage}}"
                data-power-attack = "{{powerAttack}}"                        >
                {{localize 'torgeternity.chatText.bonusDice'}}
            </a>
        </div>
    </div>
</div>