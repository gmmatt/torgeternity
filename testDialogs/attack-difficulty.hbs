<fieldset>
    <legend>{{localize "torgeternity.sheetLabels.targetDefense"}}</legend>
    <span class="skill-check-options">
        <select name="defense" class="input-box">
            <option 
                value="dodge"
                id="defend-dodge" 
                {{#if test.defaultDodge}}
                    selected = "true"
                {{/if}}
                >Dodge
                &nbsp;
                ({{test.targetDodge}})
            </option>
            <option 
                value="meleeCombat"
                id="defend-meleeCombat" 
                {{#if test.defaultMelee}}
                    selected = "true"
                {{/if}}
                >Melee Combat
                &nbsp;
                ({{test.targetMelee}})
            </option>
            <option 
                value="unarmedCombat" 
                id="defend-unarmedCombat"
                {{#if test.defaultUnarmed}}
                    selected = "true"
                {{/if}}
                >Unarmed Combat
                &nbsp;
                ({{test.targetUnarmed}})
            </option>
        </select>
    </span>
</fieldset>