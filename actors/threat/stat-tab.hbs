						</a>
						<a class="item-control item-edit" title="{{localize
							'torgeternity.iconeTitles.edit'}}">
							<i class="fas fa-edit"></i>
						</a>
						<a class="item-control item-delete" title="{{localize
							'torgeternity.iconeTitles.delete'}}">
							<i class="fas fa-trash"></i>
						</a>
					</div>
				</div>

				<div class="item-detail">
					<div class="item-dropdown-description">
						{{{item.system.description}}}
					</div>
				</div>
			</li>
			{{/each}}
		</ol>
		<!--        <div class="threat-block">
		                <b>{{localize "torgeternity.stats.description"}}</b>
		                {{{actor.system.details.description}}}
		            </div> -->
	</div>


</div>