	<div class="threat-section-skills">
		<div class="section-bar">
			{{localize "torgeternity.sheetLabels.skills"}}
			<span style="float:right">
				<a class="skill-edit-toggle">
					<i class="fas fa-edit"></i>
				</a>
			</span>
		</div>

		<div class="threat-block">
			<span class="inline-skill-list">
				{{#each actor.system.skills as |content name|}}
				{{#if content.value}}
				<span class="inline-skill-item">
					<a class="skill-roll" data-testtype="skill"
						data-baseattribute="{{content.baseAttribute}}"
						data-adds="{{content.adds}}" data-value="{{content.value}}"
						data-unskilleduse="{{content.unskilledUse}}" data-name="{{name}}">
						{{localize (concatSkillName name)}}
					</a>
					{{#if content.isFav}}
					<a class="toggleFav checked">
						<i class="far fa-star"></i>
					</a>
					{{/if}}
					&nbsp;{{content.value}}
				</span>

				{{/if}}
				{{/each}}
			</span>
		</div>

		<div class="threat-editor " id="threat-editor">
			{{#if actor.system.editstate}}
			<div class="skill-list-edit">
				{{#each actor.system.skills as |skill key|}}
				<div class="skill-element-edit">
					<span style="position:relative">{{localize (concatSkillName key)}}
					</span>
					<span class="inputsFav">
						<input name="system.skills.{{key}}.value" type="number" class="small-input"
							value="{{skill.value}}" data-dtype="Number" />

						<a class="toggleFav {{#if skill.isFav}}checked
							{{/if}}">
							<i class="far fa-star"></i>
						</a>
						<input class="favCheck" type="checkbox" name="system.skills.{{key}}.isFav"
							{{checked skill.isFav}}
							data-dtype="Boolean" />
					</span>
				</div>
				{{/each}}
			</div>

			<div class="defenseChecks">
				<div>
					Defense Only?
				</div>
				<span> 
					{{localize "torgeternity.skills.intimidation"}}
					<select name="system.skills.intimidation.defenseOnly" class="input-box">
						{{#select actor.system.skills.intimidation.defenseOnly}}
							{{#each config.yesNo as |name type|}}
								<option value="{{type}}">{{localize name}}</option>
							{{/each}}
						{{/select}}
					</select>

								
					{{localize "torgeternity.skills.maneuver"}}
					<select name="system.skills.maneuver.defenseOnly" class="input-box">
						{{#select actor.system.skills.maneuver.defenseOnly}}
							{{#each config.yesNo as |name type|}}
								<option value="{{type}}">{{localize name}}</option>
							{{/each}}
						{{/select}}
					</select>

					{{localize "torgeternity.skills.taunt"}}
					<select name="system.skills.taunt.defenseOnly" class="input-box">
						{{#select actor.system.skills.taunt.defenseOnly}}
							{{#each config.yesNo as |name type|}}
								<option value="{{type}}">{{localize name}}</option>
							{{/each}}
						{{/select}}
					</select>

					{{localize "torgeternity.skills.trick"}}
					<select name="system.skills.trick.defenseOnly" class="input-box">
						{{#select actor.system.skills.trick.defenseOnly}}
							{{#each config.yesNo as |name type|}}
								<option value="{{type}}">{{localize name}}</option>
							{{/each}}
						{{/select}}
					</select>

				</span>
			</div>
			{{/if}}
		</div>


	</div>

	<div "threat-section-perks">
		<div class="section-bar">
			{{localize "torgeternity.sheetLabels.other"}}
		</div>
	</div>



	<div class="threat-block">

		<ol class="item-list">
			{{#each perk as |item id|}}
			<li class="item" data-item-id="{{item._id}}">
				<div class="item-row flexrow">
					<img src="{{item.img}}" title="{{item.name}}" width="30" height="30"/>
					<a class="item-name">{{item.name}}</a>
					<div class="item-controls">
						<a class="item-control item-tochat" title="{{localize
							'torgeternity.iconeTitles.sendToChat'}}">
							<i class="fas fa-comment"></i>
						</a>
						<a class="item-control item-edit" title="{{localize
							'torgeternity.iconeTitles.edit'}}">
							<i class="fas fa-edit"></i>
						</a>
						<a class="item-control item-delete" title="{{localize
							'torgeternity.iconeTitles.delete'}}">
							<i class="fas fa-trash"></i>
						</a>
					</div>
				</div>
				<div class="item-detail">
					<div class="item-dropdown-description">
						{{{item.system.description}}}
						<p></p>
						<div class="item-dropdown-extras">
							{{localize (concatPerkType item.system.category)}}
						</div>
						<div class="item-dropdown-extras">
							{{item.system.cosm}}
						</div>
						<div class="item-dropdown-extras">
							{{item.system.timestaken}}x
						</div>
					</div>
				</div>
			</li>
			{{/each}}
		</ol>

		<ol class="item-list">
			{{#each specialability as |item id|}}
