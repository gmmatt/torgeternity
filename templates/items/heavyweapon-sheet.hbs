<section class="tab stats {{tab.cssClass}}" data-group="primary" data-tab="stats">
  <div class="sheet-content">
    <div class="asside">
      <p class="item-data-label">{{localize "torgeternity.gear.cosm"}}</p>
      <select name="system.cosm">
        {{selectOptions config.cosmTypes selected=item.system.cosm localize=true sort=true}}
      </select>
      <p class="item-data-label">{{localize "torgeternity.gear.techlevel"}}</p>
      <input
        name="system.techlevel"
        type="number"
        value="{{item.system.techlevel}}" />
      <p class="item-data-label">{{localize "torgeternity.gear.ammo"}}</p>
      <input
        name="system.ammo.value"
        type="number"
        value="{{item.system.ammo.value}}" />
      /
      <input
        name="system.ammo.max"
        type="number"
        value="{{item.system.ammo.max}}" />
      <p class="item-data-label">
        {{localize "torgeternity.gear.price"}}/{{localize "torgeternity.gear.value"}}
      </p>
      <input
        name="system.price"
        type="text"
        value="{{item.system.price}}" />
      <input
        name="system.value"
        type="number"
        value="{{item.system.value}}" />
      <p class="item-data-label">{{localize "torgeternity.gear.range"}}</p>
      <input name="system.range" type="text" value="{{item.system.range}}" />
      <p class="item-data-label">{{localize "torgeternity.gear.damage"}}</p>
      <input
        name="system.damage"
        type="number"
        value="{{item.system.damage}}" />
      <p class="item-data-label">{{localize "torgeternity.gear.ap"}}</p>
      <input name="system.ap" type="number" value="{{item.system.ap}}" />
      <p class="item-data-label" style="grid-column: 1/3">
        {{localize "torgeternity.sheetLabels.secondaryAxiom"}}
      </p>

      <select style="grid-column: 1/3" name="system.secondaryAxiom.selected" class=" selectSecondaryAxiom">
        <option value="none">{{localize "torgeternity.sheetLabels.none"}}</option>
        {{selectOptions config.axioms selected=item.system.secondaryAxiom.selected localize=true}}
      </select>

      {{#if displaySecondaryAxiomValue}}
        <p class="item-data-label" style="grid-column: 1/2">{{localize "torgeternity.gear.value"}}</p>
        <input
          name="system.secondaryAxiom.value"
          type="number"
          value="{{item.system.secondaryAxiom.value}}" />
      {{/if}}

    </div>
    <div class="main-content">
      <!-- right column -->
      <p class="item-data-label">
        {{localize "torgeternity.gear.notes"}}&nbsp;
        <input
          name="system.notes"
          type="text"
          value="{{item.system.notes}}" />
      </p>
      <p class="item-data-label">
        {{localize "torgeternity.gear.chatNote"}}
        <input
          name="system.chatNote"
          type="text"
          value="{{item.system.chatNote}}" />
      </p>
      <p class="item-data-label">{{localize "torgeternity.gear.description"}}</p>
      <prose-mirror toggled name="system.description" class="item-description-textarea"
        style="padding: 0px 0px 0px 10px" {{disabled (not editable)}}
        value="{{ item.system.description }}">{{{ description }}}</prose-mirror>
      {{> "systems/torgeternity/templates/items/ammunition-field.hbs"}}

      <div class="heavy-weapon-footer">
        <p class="heavy-weapon-gunners">
          {{localize "torgeternity.gear.gunner"}}
          <input
            name="system.gunner.name"
            type="text"
            value="{{item.system.gunner.name}}"
            class="gunner-input" />
          {{localize "torgeternity.gear.skill"}}
          <input
            name="system.gunner.skillValue"
            type="number"
            value="{{item.system.gunner.skillValue}}"
            class="gunner-skill" />
        </p>
      </div>
    </div>
  </div>
</section>