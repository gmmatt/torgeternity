<section class="tab stats {{tab.cssClass}}" data-group="primary" data-tab="stats">
  <div class="sheet-content">
    <div class="main-content">
      <prose-mirror toggled name="system.description" class="item-description-textarea" {{disabled (not editable)}}
        value="{{ item.system.description }}">{{{ description }}}</prose-mirror>
    </div>
  </div>

  <div class="sheet-content">
    <a class="convert-rsa" data-action="convertRsa" data-item-id="{{item.id}}">Convert to Rollable</a>
  </div>
</section>