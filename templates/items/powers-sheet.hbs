<section class="tab stats scrollable {{tab.cssClass}}" data-group="primary" data-tab="stats">
  <div class="sheet-content">
    <div class="asside">
      <p class="item-data-label">{{localize "torgeternity.powers.axiom"}}</p>
      <input name="system.axioms.{{axiom}}" type="number" value="{{lookup item.system.axioms axiom}}" />
      <p class="item-data-label">
        {{localize "torgeternity.powers.skill"}}/{{localize "torgeternity.powers.skilllevel"}}
      </p>
      <select name="system.skill">
        {{selectOptions config.powerSkills selected=item.system.skill localize=true sort=true}}
      </select>
      <input
        name="system.skilllevel"
        type="number"
        value="{{item.system.skilllevel}}" />
      <p class="item-data-label">{{localize "torgeternity.powers.dn"}}</p>
      <select name="system.dn">
        {{selectOptions config.dnTypes selected=item.system.dn localize=true}}
      </select>
      <p class="item-data-label">{{localize "torgeternity.powers.modifier"}}</p>
      <input
        name="system.modifier"
        type="number"
        value="{{item.system.modifier}}" />
      <p class="item-data-label">{{localize "torgeternity.powers.castingtime"}}</p>
      <input
        name="system.castingtime"
        type="text"
        value="{{item.system.castingtime}}" />
      <p class="item-data-label">{{localize "torgeternity.powers.range"}}</p>
      <input name="system.range" type="text" value="{{item.system.range}}" />
      <p class="item-data-label">{{localize "torgeternity.powers.duration"}}</p>
      <input
        name="system.duration"
        type="text"
        value="{{item.system.duration}}" />
      <div class="flexrow">
        <p class="item-data-label">{{localize "torgeternity.powers.requiresConcentration"}}</p>
        <input class="toggle"
          name="system.requiresConcentration"
          type="checkbox"
          {{checked item.system.requiresConcentration}} data-dtype="Boolean" />
      </div>
      <p class="item-data-label atkDmgAP">
        {{localize "torgeternity.powers.attack"}}? / {{localize "torgeternity.powers.damage"}} /
        {{localize "torgeternity.powers.ap"}}
      </p>
      <select name="system.isAttack" default="false">
        {{selectOptions config.yesNo selected=item.system.isAttack localize=true sort=true}}
      </select>
      <input
        name="system.damage"
        type="number"
        value="{{item.system.damage}}" />
      <input name="system.ap" type="number" value="{{item.system.ap}}" />
      <p class="item-data-label">
        {{localize "torgeternity.powers.applySize"}} / {{localize
          'torgeternity.powers.applyArmor'}}
      </p>
      <select name="system.applySize" default="false">
        {{selectOptions config.yesNo selected=item.system.applySize localize=true sort=true}}
      </select>
      <select name="system.applyArmor" default="false">
        {{selectOptions config.yesNo selected=item.system.applyArmor localize=true sort=true}}
      </select>
    </div>
    <div class="main-content">
      <p class="item-data-label">{{localize "torgeternity.gear.description"}}</p>
      <prose-mirror name="system.description" class="item-description" toggled
        {{disabled (not @root.editable)}}
        value="{{ item.system.description }}">{{{ description }}}</prose-mirror>
      <p class="item-data-label">{{localize "torgeternity.sheetLabels.goodResult"}}</p>
      <prose-mirror name="system.good" class="item-description smallEditor" toggled
        {{disabled (not @root.editable)}} value="{{ item.system.good }}">
        {{{enrichedGood}}} </prose-mirror>
      <p class="item-data-label">{{localize "torgeternity.sheetLabels.outstandingResult"}}</p>
      <prose-mirror name="system.outstanding" class="item-description smallEditor" toggled
        {{disabled (not @root.editable)}} value="{{ item.system.outstanding }}">
        {{{enrichedOutstanding}}}</prose-mirror>
    </div>
  </div>
  </div>