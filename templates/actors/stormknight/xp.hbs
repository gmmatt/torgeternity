<p class="item-data-label">
  {{localize "torgeternity.sheetLabels.clearance"}} :
  {{localize (concat "torgeternity.clearances." document.system.details.clearance)}}
</p>

<p class='attribut-block'>
  <span class="main-label">{{localize "torgeternity.sheetLabels.unspent"}}</span>
  <input class="roundBack" name="system.xp.unspent" type="number" value="{{document.system.xp.unspent}}"
    data=dtype="Number"
    {{#if disableXP}} disabled data-tooltip="{{localize 'torgeternity.sheetLabels.xpOnlyGM'}}" {{/if}} />
</p>

<p class='attribut-block'>
  <span class="main-label">{{localize "torgeternity.sheetLabels.xp"}}</span>
  <input name="system.xp.earned" class="roundBack" type="number" value="{{document.system.xp.earned}}"
    data=dtype="Number"
    {{#if disableXP}} disabled data-tooltip="{{localize 'torgeternity.sheetLabels.xpOnlyGM'}}" {{/if}} />
</p>

{{#if showPiety}}
  <p class='attribut-block'>
    <span class="main-label">{{localize "torgeternity.sheetLabels.piety"}}</span>
    <input name="system.other.piety" class="roundBack" type="number" value="{{document.system.other.piety}}"
      data=dtype="Number" />
  </p>
{{/if}}