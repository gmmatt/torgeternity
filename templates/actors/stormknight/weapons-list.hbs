<h2>
    {{localize "torgeternity.sheetLabels.attacks"}}
</h2>
<h3>{{localize "torgeternity.sheetLabels.meleeWeapons"}}</h3>
<div class="item-list">
    {{#each meleeweapons as |item id|}}
    <li class="item" data-item-id="{{item._id}}">

        <div>
            <img src="{{item.img}}" title="{{item.name}}" />

        </div>
        <span class="item-name">{{item.name}} </span>
        <div class="item-controls">
            <a class="item-control item-attackRoll" title="Attack Roll"><i class="fas fa-dice-d20"></i></a>
            <a class="item-control item-bonusRoll" title="Bonus Roll"><i class="fas fa-dice-d6"></i></a>
            <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
            <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
        </div>
    </li>
    {{/each}}
</div>
