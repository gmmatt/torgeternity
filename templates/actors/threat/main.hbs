                                {{localize "torgeternity.skills.taunt"}} <input name="data.skills.taunt.value" type="number" class="small-input" value="{{data.skills.taunt.value}}" data-dtype="Number" /><br>
                                {{localize "torgeternity.skills.telepathy"}} <input name="data.skills.telepathy.value" type="number" class="small-input" value="{{data.skills.telepathy.value}}" data-dtype="Number" /><br>
                                {{localize "torgeternity.skills.tracking"}} <input name="data.skills.tracking.value" type="number" class="small-input" value="{{data.skills.tracking.value}}" data-dtype="Number" /><br>
                                {{localize "torgeternity.skills.trick"}} <input name="data.skills.trick.value" type="number" class="small-input" value="{{data.skills.trick.value}}" data-dtype="Number" /><br>
                                {{localize "torgeternity.skills.unarmedCombat"}} <input name="data.skills.unarmedCombat.value" type="number" class="small-input" value="{{data.skills.unarmedCombat.value}}" data-dtype="Number" /><br>
                                {{localize "torgeternity.skills.waterVehicles"}} <input name="data.skills.waterVehicles.value" type="number" class="small-input" value="{{data.skills.waterVehicles.value}}" data-dtype="Number" /><br>
                                {{localize "torgeternity.skills.willpower"}} <input name="data.skills.willpower.value" type="number" class="small-input" value="{{data.skills.willpower.value}}" data-dtype="Number" />          <br>              
                            </td>
                        </tr>

                    </table>
                </div>            
                            
                <div class="threat-block">
                    <a class="toggle-threat-edit" title="Edit" style="float:right"><i class="fas fa-edit"></i></a>
                    <div style="margin-right:10px">
                        <b>Attributes: </b>
                        <a class="skill-roll" data-skill-value="{{data.attributes.charisma}}" data-skill-name="Charisma">{{localize "torgeternity.attributes.charisma"}}</a> 
                            {{data.attributes.charisma}}, &nbsp;
                        <a class="skill-roll" data-skill-value="{{data.attributes.dexterity}}" data-skill-name="Dexterity">{{localize "torgeternity.attributes.dexterity"}}</a> 
                            {{data.attributes.dexterity}},&nbsp;
                        <a class="skill-roll" data-skill-value="{{data.attributes.mind}}" data-skill-name="Mind">{{localize "torgeternity.attributes.mind"}}</a> 
                            {{data.attributes.mind}},&nbsp;
                        <a class="skill-roll" data-skill-value="{{data.attributes.spirit}}" data-skill-name="Spirit">{{localize "torgeternity.attributes.spirit"}}</a> 
                            {{data.attributes.spirit}},&nbsp;
                        <a class="skill-roll" data-skill-value="{{data.attributes.strength}}" data-skill-name="Strength">{{localize "torgeternity.attributes.strength"}}</a> 
                            {{data.attributes.strength}}
                    </div>  

                </div>
                <div class="threat-block">
                    <b>Skills:&nbsp;</b>
                    <span class="inline-skill-list">
                    {{#each data.skills as |content name|}}
                        {{#if content.value}}
                            <span class="inline-skill-item">
                                <a class="skill-roll" data-skill-value="{{content.value}}" data-skill-name="{{localize (concatSkillName name)}}">{{localize (concatSkillName name)}}</a>
                                &nbsp;{{content.value}}
                            </span>
                        {{/if}}
                    {{/each}}
                    </span>

                </div>

                    <div class="threat-block">
                        <b>{{localize "torgeternity.sheetLabels.equipment"}}:</b>&nbsp;
                        <span class="inline-skill-list">
                            {{#each meleeweapons as |item id|}}
                            <a class="item-attackRoll inline-skill-item item"
                                data-item-id="{{item._id}}">{{item.name}}</a>
                            {{/each}}

                            {{#each missileweapon as |item id|}}
                            <a class="item-attackRoll inline-skill-item item"
                                data-item-id="{{item._id}}">{{item.name}}</a>
                            {{/each}}

                            {{#each firearm as |item id|}}
                            <a class="item-attackRoll inline-skill-item item"
                                data-item-id="{{item._id}}">{{item.name}}</a>
                            {{/each}}

                            {{#each heavyweapon as |item id|}}
                            <a class="item-attackRoll inline-skill-item item"
                                data-item-id="{{item._id}}">{{item.name}}</a>
                            {{/each}}

                            {{#each armor as |item id|}}
                            <span class="inline-skill-item">{{item.name}}</span>
                            {{/each}}

                            {{#each shield as |item id|}}
                            <span class="inline-skill-item">{{item.name}}</span>
                            {{/each}}

                            {{#each gear as |item id|}}
                            <span class="inline-skill-item">{{item.name}}</span>
                            {{/each}}

                            {{#each implant as |item id|}}
                            <span class="inline-skill-item">{{item.name}}</span>
                            {{/each}}

                            {{#each eternityshard as |item id|}}
                            <span class="inline-skill-item">{{item.name}}</span>
                            {{/each}}

                        {{#each eternityshard as |item id|}}
                            <span class="inline-skill-item">{{item.name}}</span>
                        {{/each}}

                    <div class="threat-block">
                        <b>{{localize "torgeternity.sheetLabels.perks"}}</b>:&nbsp;
                        <span class="inline-skill-list">
                            {{#each perk as |item id|}}
                            <span class="inline-skill-item">{{item.name}}</span>
                            {{/each}}
                        </span>
                    </div>

                <div class="threat-block">
                    <b>{{localize "torgeternity.sheetLabels.perks"}}</b>:&nbsp;
                    <span class="inline-skill-list">                        
                        {{#each perk as |item id|}}
                            <span class="inline-skill-item">{{item.name}}</span>
                        {{/each}}
                    </span>
                </div>

                    <div class="threat-block">
                        <b>{{localize "torgeternity.sheetLabels.specialabilities"}}</b>:
                        <ul class="specialability-list">

                            {{#each specialabilityRollable as |item id|}}
                            <li>
                                <b><a class="item-attackRoll item" data-item-id="{{item._id}}">{{item.name}}</a></b>
                                .&nbsp;
                                {{{item.data.description}}}
                            </li>
                            {{/each}}

                            {{#each specialability as |item id|}}
                            <li>
                                <b>{{item.name}}</b>
                                .&nbsp;
                                {{{item.data.description}}}
                            </li>
                            {{/each}}

                        </ul>
                    </div>
                    <div class="threat-block">
                        <b>Description</b>
                        {{{data.details.description}}}
                    </div>
                </div>
            </div>
        </div>

        <div class="tab perks perks-list" style="height:400px;overflow:scroll" data-group="primary" data-tab="perks">

            <div class="list-section-heading">
                {{localize "torgeternity.sheetLabels.specialAbility"}}
