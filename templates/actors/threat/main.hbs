<form class="actor-sheet {{cssClass}} threat sheet" autocomplete="off">
    <h3 class="actor-type"><span>{{localize "torgeternity.sheetLabels.threat"}}</span></h3>

    <header class="sheet-header threat">
        <img src="{{actor.img}}" data-edit="img" title="{{actor.name}}"  />
        <h1><input name="name" type="text" value="{{actor.name}}" placeholder="Threat Name" /></h1>
    </header>
   
    <div class="threat-stat-line">
        <table style="border:none;background:none;font-family:'Palatino Linotype';font-size:14;font-weight:bold">
            <tr>
            <td style="text-align:center" width="30%">
                <span class="vital-box">
                    Wounds: 
                    <input name="data.wounds.value" type="number" value="{{data.wounds.value}}" data-dtype="Number" class="small-input" />
                    /
                    <input name="data.wounds.max" type="number" value="{{data.wounds.max}}" data-dtype="Number" class="small-input" />
                </span>
            </td>
                <td style="text-align:center" width="30%">
                    <span class="vital-box">
                        Shock: 
                        <input name="data.shock.value" type="number" value="{{data.shock.value}}" data-dtype="Number" class="small-input" />
                        /
                        <input name="data.shock.max" type="number" value="{{data.shock.max}}" data-dtype="Number" class="small-input" />
                    </span>
                </td>
            <td style="text-align:center" width="30%">
                <span class="vital-box">
                    <a class="item-control possibility-roll" title="Possibility Roll">Possibilities: </a>
                    <input name="data.other.possibilities" type="number" value="{{data.other.possibilities}}" data-dtype="Number" class="small-input" />
                </span>
            </td>
            </tr>
        </table>
    </div>  


    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary" style="background-image:url('systems/torgeternity/images/tab-header.png');background-size:578px 30px;background-repeat:no-repeat;color:white">
        <a class="item" data-tab="stats">{{localize "torgeternity.sheetLabels.stats"}}</a>
        <a class="item" data-tab="perks">{{localize "torgeternity.sheetLabels.perksAbilities"}}</a>
        <a class="item" data-tab="gear">{{localize "torgeternity.sheetLabels.gear"}}</a>
        <a class="item" data-tab="powers">{{localize "torgeternity.sheetLabels.powers"}}</a>
        <a class="item" data-tab="background">{{localize "torgeternity.sheetLabels.backgroundDescription"}}</a>
    </nav>

    <section class="sheet-body sheet-content"  style="display:flex;flex-direction:column">
        <div class="tab threat-block-tab stats" data-group="primary" data-tab="stats">

            <div class="threat-contents">

                <div class="threat-editor" id="threat-editor" style="display:{{data.editstate}}">
                    <div class="threat-edit">
                        {{localize "torgeternity.attributes.charisma"}} <input name="data.attributes.charisma" type="number" value="{{data.attributes.charisma}}" data=dtype="Number" class="small-input" />,&nbsp;
                        {{localize "torgeternity.attributes.dexterity"}} <input name="data.attributes.dexterity" type="number" value="{{data.attributes.dexterity}}" data=dtype="Number" class="small-input" />,&nbsp;
                        {{localize "torgeternity.attributes.mind"}} <input name="data.attributes.mind" type="number" value="{{data.attributes.mind}}" data=dtype="Number" class="small-input" />,&nbsp;
                        {{localize "torgeternity.attributes.spirit"}} <input name="data.attributes.spirit" type="number" value="{{data.attributes.spirit}}" data=dtype="Number" class="small-input" />,&nbsp;
                        {{localize "torgeternity.attributes.strength"}} <input name="data.attributes.strength" type="number" value="{{data.attributes.strength}}" data=dtype="Number" class="small-input" />
                    </div>
                    <div class="threat-edit">
                            Move:&nbsp;
                            <input name="data.other.move" class="small-input" type="number" value="{{data.other.move}}" data-dtype="Number" />;&nbsp;
                            Tough:&nbsp;
                            <input name="data.other.toughness" class="small-input" type="number" value="{{data.other.toughness}}" data-dtype="Number" />&nbsp;/&nbsp;(<input name="data.other.armor" class="small-input" type="number" value="{{data.other.armor}}" data-dtype="Number" />)
                    </div>
                    <div class="threat-edit">
