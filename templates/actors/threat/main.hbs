                                {{localize "torgeternity.skills.heavyWeapons"}} <input name="data.skills.heavyWeapons.value" type="number" class="small-input" value="{{data.skills.heavyWeapons.value}}" data-dtype="Number" /><br>
                                {{localize "torgeternity.skills.intimidation"}} <input name="data.skills.intimidation.value" type="number" class="small-input" value="{{data.skills.intimidation.value}}" data-dtype="Number" /><br>
