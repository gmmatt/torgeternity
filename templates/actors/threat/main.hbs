                                {{localize "torgeternity.skills.science"}} <input name="data.skills.science.value" type="number" class="small-input" value="{{data.skills.science.value}}" data-dtype="Number" /><br>
                            </td>
                            <td width="25%">
                                {{localize "torgeternity.skills.stealth"}} <input name="data.skills.stealth.value" type="number" class="small-input" value="{{data.skills.stealth.value}}" data-dtype="Number" /><br>
