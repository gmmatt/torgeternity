<section class="tab powers {{tabs.powers.cssClass}}" data-group="{{tabs.powers.group}}"
  data-tab="{{tabs.powers.id}}">

  <div class="list-section-heading">
    <span>{{localize "torgeternity.sheetLabels.spells"}}</span>
    {{#if editable}}
      <div class="list-controls">
        <a class="list-control item-create" data-action="itemCreate" data-itemtype="spell"
          data-tooltip="{{localize 'torgeternity.sheetLabels.add'}} : 
      {{localize 'torgeternity.itemSheetDescriptions.spell' }}">
          <i class="fas fa-plus"></i>
        </a>
      </div>
    {{/if}}
  </div>
  <ol class="item-list">
    {{#each spell as |item id|}}
      <li class="item" data-item-id="{{item._id}}">
        <div class="item-row flexrow">
          <img src="{{item.img}}" data-tooltip="{{item.name}}" />
          <a class="item-name {{TorgDisconnected item}}" data-action="itemName" data-drag="true">{{item.name}}</a>
          <div class="item-controls">
            <a class="item-control item-powerRoll" data-action="itemPowerRoll" {{disabled (not @root.editable)}}
              data-tooltip="{{localize 'torgeternity.iconeTitles.spellRoll'}}">
              <i class="fas fa-dice-d20"></i>
            </a>
            <a class="item-control item-tochat" data-action="itemToChat" {{disabled (not @root.editable)}}
              data-tooltip="{{localize 'torgeternity.iconeTitles.sendToChat'}}">
              <i class="fas fa-comment"></i>
            </a>
            <a class="item-control item-edit" data-action="itemEdit"
              data-tooltip="{{localize 'torgeternity.iconeTitles.edit'}}">
              <i class="fas fa-edit"></i>
            </a>
            <a class="item-control item-delete" data-action="itemDelete" {{disabled (not @root.editable)}}
              data-tooltip="{{localize 'torgeternity.iconeTitles.delete'}}">
              <i class="fas fa-trash"></i>
            </a>
          </div>
        </div>
        <div class="item-detail">
          <div class="item-dropdown-description">
            {{{item.description}}}
            <p></p>
            <div class="item-dropdown-extras">
              {{item.system.skill}}
            </div>
            <div class="item-dropdown-extras">
              {{item.system.dn}}
            </div>
            <div class="item-dropdown-extras">
              {{item.system.castingtime}}
            </div>
            <div class="item-dropdown-extras">
              {{item.system.range}}
            </div>
            <div class="item-dropdown-extras">
              {{item.system.duration}}
            </div>
          </div>
        </div>
      </li>
    {{/each}}
  </ol>

