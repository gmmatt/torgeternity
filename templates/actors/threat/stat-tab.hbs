<div class="threat-contents block">
	<div class="threat-block">

		<div class="attribut-list" style="margin-right:10px">
			<b>{{localize "torgeternity.sheetLabels.attributes"}}:
			</b>
			<span class="inline-skill-list">
				<span>
					<a class="skill-roll" data-testtype="attribute"
						data-baseattribute="charisma" data-adds="0"
						data-value="{{actor.system.attributes.charisma}}" data-unskilleduse="1"
						data-name="charisma">
						{{localize "torgeternity.attributes.charisma"}}
					</a>
					{{actor.system.attributes.charisma}}, &nbsp;
				</span>
				<span>
					<a class="skill-roll" data-testtype="attribute"
						data-baseattribute="dexterity" data-adds="0"
						data-value="{{actor.system.attributes.dexterity}}" data-unskilleduse="1"
						data-name="dexterity">
						{{localize "torgeternity.attributes.dexterity"}}
					</a>
					{{actor.system.attributes.dexterity}}, &nbsp;
				</span>
				<span>
					<a class="skill-roll" data-testtype="attribute" data-baseattribute="mind"
						data-adds="0"
						data-value="{{actor.system.attributes.mind}}" data-unskilleduse="1"
						data-name="mind">
						{{localize "torgeternity.attributes.mind"}}
					</a>
					{{actor.system.attributes.mind}}, &nbsp;
				</span>
				<span>
					<a class="skill-roll" data-testtype="attribute" data-baseattribute="spirit"
						data-adds="0"
						data-value="{{actor.system.attributes.spirit}}" data-unskilleduse="1"
						data-name="spirit">
						{{localize "torgeternity.attributes.spirit"}}
					</a>
					{{actor.system.attributes.spirit}}, &nbsp;
				</span>
				<span>
					<a class="skill-roll" data-testtype="attribute"
						data-baseattribute="strength" data-adds="0"
						data-value="{{actor.system.attributes.strength}}" data-unskilleduse="1"
						data-name="strength">
						{{localize "torgeternity.attributes.strength"}}
					</a>
					{{actor.system.attributes.strength}}, &nbsp;
				</span>
			</span>
		</div>
	</div>
	<div class="threat-block">
		<b>{{localize "torgeternity.sheetLabels.skills"}}:&nbsp;</b>
		<span class="inline-skill-list">
			{{#each actor.system.skills as |content name|}}
			{{#if content.value}}
			<span class="inline-skill-item">
				<a class="skill-roll" data-testtype="skill"
					data-baseattribute="{{content.baseAttribute}}"
					data-adds="{{content.adds}}" data-value="{{content.value}}"
					data-unskilleduse="{{content.unskilledUse}}" data-name="{{name}}">
					{{localize (concatSkillName name)}}
				</a>
				{{#if content.isFav}}
				<a class="toggleFav checked">
					<i class="far fa-star"></i>
				</a>
				{{/if}}
				&nbsp;{{content.value}}
			</span>

			{{/if}}
			{{/each}}
		</span>
	</div>
	<div class="threat-block">
		<b>{{localize "torgeternity.sheetLabels.move"}}:</b>&nbsp;{{actor.system.other.move}};&nbsp;
		<b>{{localize
			"torgeternity.sheetLabels.toughness"}}:</b>&nbsp;{{actor.system.other.toughness}}&nbsp;({{actor.system.other.armor}});&nbsp;
		<b>{{localize "torgeternity.sheetLabels.shock"}}:&nbsp;</b>
		{{actor.system.shock.max}};&nbsp;
		<b>{{localize "torgeternity.sheetLabels.wounds"}}:&nbsp;</b>
		{{actor.system.wounds.max}}
	</div>
	<div class="threat-block">
		<b>{{localize "torgeternity.sheetLabels.equipment"}}:</b>&nbsp;
		<span>
			{{#each meleeweapons as |item id|}}
			<a class="item-attackRoll inline-skill-item item" data-item-id="{{item._id}}">{{item.name}}</a>
			{{/each}}

			{{#each missileweapon as |item id|}}
			<a class="item-attackRoll inline-skill-item item" data-item-id="{{item._id}}">{{item.name}}</a>
			{{/each}}

			{{#each firearm as |item id|}}
			<a class="item-attackRoll inline-skill-item item" data-item-id="{{item._id}}">{{item.name}}</a>
			{{/each}}

			{{#each heavyweapon as |item id|}}
			<a class="item-attackRoll inline-skill-item item" data-item-id="{{item._id}}">{{item.name}}</a>
			{{/each}}

			{{#each armor as |item id|}}
			<a class="inline-skill-item item" data-item-id="{{item._id}}">{{item.name}}</a>
			{{/each}}

			{{#each shield as |item id|}}
			<a class="inline-skill-item item" data-item-id="{{item._id}}">{{item.name}}</a>
			{{/each}}

			{{#each gear as |item id|}}
			<a class="inline-skill-item item" data-item-id="{{item._id}}">{{item.name}}</a>
			{{/each}}

			{{#each implant as |item id|}}
			<a class="inline-skill-item item" data-item-id="{{item._id}}">{{item.name}}</a>
			{{/each}}

			{{#each eternityshard as |item id|}}
			<a class="inline-skill-item item" data-item-id="{{item._id}}">{{item.name}}</a>
			{{/each}}
		</span>

		<div class="threat-block">
			<b>{{localize "torgeternity.sheetLabels.perks"}}</b>:&nbsp;
			<span>
				{{#each perk as |item id|}}
				<a class="inline-skill-item item" data-item-id="{{item._id}}">{{item.name}}</a>
				{{/each}}
			</span>
		</div>

		<div class="threat-block">
			<b>{{localize "torgeternity.sheetLabels.specialabilities"}}</b>:
			<ul class="specialability-list">

				{{#each specialabilityRollable as |item id|}}
				<li>
					<b>
						<a class="item-attackRoll item" data-item-id="{{item._id}}">{{item.name}}</a>
					</b>
					.&nbsp;
					{{{concatSpecialAbility item.system.description}}}
				</li>
				{{/each}}

				{{#each specialability as |item id|}}
				<li>
					<b>
                        <a class="item" data-item-id="{{item._id}}">{{item.name}}</a>
                    </b>
					.&nbsp;
					{{{concatSpecialAbility item.system.description}}}
				</li>
				{{/each}}

			</ul>
		</div>
		<!--        <div class="threat-block">
		                <b>{{localize "torgeternity.stats.description"}}</b>
		                {{{actor.system.details.description}}}
		            </div> -->
	</div>
</div>
<div class="threat-editor " id="threat-editor">

	<div class="threat-edit attribut-list-edit">
		<span>
			<span>{{localize "torgeternity.attributes.charisma"}}</span>
			<input name="system.attributes.charisma" type="number"
				value="{{actor.system.attributes.charisma}}" data="dtype="
				Number"" class="small-input" />,&nbsp;
		</span>
		<span>
			<span>{{localize "torgeternity.attributes.dexterity"}}</span>
			<input name="system.attributes.dexterity" type="number"
				value="{{actor.system.attributes.dexterity}}"
				data="dtype=" Number"" class="small-input" />,&nbsp;
		</span>
		<span>
			<span>{{localize "torgeternity.attributes.mind"}}</span>
			<input name="system.attributes.mind" type="number"
				value="{{actor.system.attributes.mind}}" data="dtype="
				Number"" class="small-input" />,&nbsp;
		</span>
		<span>
			<span>{{localize "torgeternity.attributes.spirit"}}</span>
			<input name="system.attributes.spirit" type="number"
				value="{{actor.system.attributes.spirit}}" data="dtype="
				Number"" class="small-input" />,&nbsp;
		</span>
		<span>
			<span>{{localize "torgeternity.attributes.strength"}}</span>
			<input name="system.attributes.strength" type="number"
				value="{{actor.system.attributes.strength}}" data="dtype="
				Number"" class="small-input" />
		</span>


	</div>
	<div class="threat-edit">
		<b>{{localize "torgeternity.sheetLabels.skills"}}</b>
	</div>
	<div class="skill-list-edit">
		{{#each actor.system.skills as |skill key|}}
		<div class="skill-element-edit">
			<span style="position:relative">{{localize (concatSkillName key)}}
			</span>
			<span class="inputsFav">
				<input name="system.skills.{{key}}.value" type="number" class="small-input"
					value="{{skill.value}}" data-dtype="Number" />

				<a class="toggleFav {{#if skill.isFav}}checked
					{{/if}}">
					<i class="far fa-star"></i>
				</a>
				<input class="favCheck" type="checkbox" name="system.skills.{{key}}.isFav"
					{{checked skill.isFav}}
					data-dtype="Boolean" />
			</span>
		</div>
		{{/each}}
	</div>


	<div class="threat-edit">
		{{localize "torgeternity.sheetLabels.move"}}:&nbsp;
		<input name="system.other.move" class="small-input" type="number"
			value="{{actor.system.other.move}}"
			data-dtype="Number" />;&nbsp;
		{{localize "torgeternity.sheetLabels.tough"}}:&nbsp;
		<input name="system.other.toughness" class="small-input" type="number"
			value="{{actor.system.other.toughness}}"
			data-dtype="Number" />&nbsp;/&nbsp;(<input name="system.other.armor"
			class="small-input" type="number"
			value="{{actor.system.other.armor}}" data-dtype="Number" />)
	</div>
	<div class="threat-edit">
		{{localize "torgeternity.sheetLabels.possibilitypotential"}}:&nbsp;
		<input name="system.details.possibilitypotential" class="text-input" type="text"
			value="{{actor.system.details.possibilitypotential}}" />
	</div>
	<div class="threat-edit">
		{{localize "torgeternity.sheetLabels.size"}}: &nbsp;
		<select name="system.details.sizeBonus" class="input-box">
			{{#select actor.system.details.sizeBonus}}
			{{#each config.sizes as |name type|}}
			<option value="{{type}}">{{localize name}}</option>
			{{/each}}
			{{/select}}
		</select>
	</div>
</div>