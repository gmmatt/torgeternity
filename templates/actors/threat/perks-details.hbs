<div class="list-section-heading">
  {{localize "torgeternity.sheetLabels.specialAbility"}}
  <a
    class="item-control item-create-rsa"
    title="{{localize 'torgeternity.sheetLabels.add'}} : {{localize
      'torgeternity.itemSheetDescriptions.specialabilityRollable'
    }}"
  >
    <i class="fas fa-plus"></i>
  </a>
  <a
    class="item-control item-create-sa"
    title="{{localize 'torgeternity.sheetLabels.add'}} : {{localize
      'torgeternity.itemSheetDescriptions.specialability'
    }}"
  >
    <i class="fas fa-plus"></i>
  </a>
</div>

<ol class="item-list">
  {{#each specialability as |item id|}}
    <li class="item" data-item-id="{{item._id}}">

      <div class="item-row flexrow">
        <img src="{{item.img}}" title="{{item.name}}" />
        <a class="item-name">{{item.name}}</a>
        <div class="item-controls">
          <a class="item-control item-tochat" title="{{localize 'torgeternity.iconeTitles.sendToChat'}}">
            <i class="fas fa-comment"></i>
          </a>
          <a class="item-control item-edit" title="{{localize 'torgeternity.iconeTitles.edit'}}">
            <i class="fas fa-edit"></i>
          </a>
          <a class="item-control item-delete" title="{{localize 'torgeternity.iconeTitles.delete'}}">
            <i class="fas fa-trash"></i>
          </a>
        </div>
      </div>

      <div class="item-detail">
        <div class="item-dropdown-description">
          {{{item.system.description}}}
        </div>
      </div>
    </li>
  {{/each}}
</ol>

<ol class="item-list">
  {{#each specialabilityRollable as |item id|}}
    <li class="item" data-item-id="{{item._id}}">
      <div class="item-row flexrow">
        <img src="{{item.img}}" title="{{item.name}}" width="30" height="30" />
        <a class="item-name">{{item.name}}</a>
        <div class="item-controls">
          <a class="item-control item-attackRoll" title="{{localize 'torgeternity.iconeTitles.attackRoll'}}">
            <i class="fas fa-dice-d20"></i>
          </a>
          <a class="item-control item-bonusRoll" title="{{localize 'torgeternity.iconeTitles.bonusRoll'}}">
            <i class="fas fa-dice-d6"></i>
          </a>
          <a class="item-control item-edit" title="{{localize 'torgeternity.iconeTitles.edit'}}">
            <i class="fas fa-edit"></i>
          </a>
          <a class="item-control item-delete" title="{{localize 'torgeternity.iconeTitles.delete'}}">
            <i class="fas fa-trash"></i>
          </a>
        </div>
      </div>
      <div class="item-detail">
        <div class="item-dropdown-description">
          {{{item.system.description}}}
        </div>
      </div>
    </li>
  {{/each}}
</ol>

<div class="list-section-heading">
  {{localize "torgeternity.sheetLabels.perks"}}
</div>
<ol class="item-list">
  {{#each perk as |item id|}}
    <li class="item" data-item-id="{{item._id}}">
      <div class="item-row flexrow">
        <img src="{{item.img}}" title="{{item.name}}" width="30" height="30" />
        <a class="item-name">{{item.name}}</a>
        <div class="item-controls">
          <a class="item-control item-tochat" title="{{localize 'torgeternity.iconeTitles.sendToChat'}}">
            <i class="fas fa-comment"></i>
          </a>
          <a class="item-control item-edit" title="{{localize 'torgeternity.iconeTitles.edit'}}">
            <i class="fas fa-edit"></i>
          </a>
          <a class="item-control item-delete" title="{{localize 'torgeternity.iconeTitles.delete'}}">
            <i class="fas fa-trash"></i>
          </a>
        </div>
      </div>
      <div class="item-detail">
        <div class="item-dropdown-description">
          {{{item.system.description}}}
          <p></p>
          <div class="item-dropdown-extras">
            {{localize (concatPerkType item.system.category)}}
          </div>
          <div class="item-dropdown-extras">
            {{item.system.cosm}}
          </div>
          <div class="item-dropdown-extras">
            {{item.system.timestaken}}x
          </div>
        </div>
      </div>
    </li>
  {{/each}}
</ol>
<div class="list-section-heading">
  {{localize "torgeternity.sheetLabels.enhancements"}}
</div>
<ol class="item-list">
  {{#each enhancement as |item id|}}
    <li class="item" data-item-id="{{item._id}}">
      <div class="item-row flexrow">
        <img src="{{item.img}}" title="{{item.name}}" width="30" height="30" />
        <a class="item-name">{{item.name}}
          ({{localize "torgeternity.enhancements.enhances"}}
          {{item.system.perk}})</a>
        <div class="item-controls">
          <a class="item-control item-tochat" title="{{localize 'torgeternity.iconeTitles.sendToChat'}}">
            <i class="fas fa-comment"></i>
          </a>
          <a class="item-control item-edit" title="{{localize 'torgeternity.iconeTitles.edit'}}">
            <i class="fas fa-edit"></i>
          </a>
          <a class="item-control item-delete" title="{{localize 'torgeternity.iconeTitles.delete'}}">
            <i class="fas fa-trash"></i>
          </a>
        </div>
      </div>
      <div class="item-detail">
        <div class="item-dropdown-description">
          {{{item.system.description}}}
        </div>
      </div>
    </li>
  {{/each}}
</ol>