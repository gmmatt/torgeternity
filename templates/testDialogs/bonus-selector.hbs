<fieldset>
  <legend
    data-tooltip="{{localize "torgeternity.sheetLabels.inputExistingTooltip"}}"
  >Bonus</legend>
  <span class="skill-check-options">
    <input 
      type="radio" 
      id="roll" 
      name="bonus" 
      value="0" 
      checked />
    <label 
      for="roll">{{localize "torgeternity.sheetLabels.roll"}}</label>
    <input
      type="radio"
      id="previous-bonus"
      data-tooltip= {{localize "torgeternity.sheetLabels.inputExistingRdbTitle"}}
      name="prevbonus"
      value="1"
    />
    <label for="input">{{localize "torgeternity.sheetLabels.inputExisting"}}</label>
    <input
      type="number"
      id="bonus-text"
      data-tooltip={{localize "torgeternity.sheetLabels.inputExistingTitle"}}
      placeholder="0"
    />
  </span>
</fieldset>