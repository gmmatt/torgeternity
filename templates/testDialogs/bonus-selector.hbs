<fieldset>
  <legend
    data-tooltip="{{localize " torgeternity.sheetLabels.inputExistingTooltip"}}">Bonus</legend>
  <span class="skill-check-options">
    <input
      type="radio"
      id="roll"
      data-dtype="Boolean"
      name="prevBonus"
      value=false
      checked />
    <label
      for="roll">{{localize "torgeternity.sheetLabels.roll"}}</label>
    <input
      type="radio"
      data-dtype="Boolean"
      id="previous-bonus"
      data-tooltip="{{localize " torgeternity.sheetLabels.inputExistingRdbTitle"}}"
      name="prevBonus"
      value=true />
    <label for="input">{{localize "torgeternity.sheetLabels.inputExisting"}}</label>
    <input
      type="number"
      data-dtype="String"
      id="bonus-text"
      name="bonusText"
      data-tooltip="{{localize " torgeternity.sheetLabels.inputExistingTitle"}}"
      placeholder="???" />
  </span>
</fieldset>