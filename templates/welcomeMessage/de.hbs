<script>
    let crCompLinks = document.getElementsByClassName("compendium");
    for (let link of crCompLinks) {
        link.addEventListener("click", (ev) => openCrComp(ev));
    }
    function openCrComp(ev) {
        if (ev.currentTarget.classList.contains("systemRules")) {
            game.packs.get("torgeternity.system-de-basisregeln").render(true);
        }
        else if (ev.currentTarget.classList.contains("systemArchetypes")) {
            game.packs.get("torgeternity.system-de-archetypen").render(true);
        }
        else if (ev.currentTarget.classList.contains("systemHandouts")) {
            game.packs.get("torgeternity.system-de-handouts").render(true);
        }
        else if (ev.currentTarget.classList.contains("systemCards")) {
            game.packs.get("torgeternity.system-de-grundkarten").render(true);
        }
        else if (ev.currentTarget.classList.contains("systemScenes")) {
            game.packs.get("torgeternity.core-scenes").render(true);
        }
        else if (ev.currentTarget.classList.contains("systemMacros")) {
            game.packs.get("torgeternity.macros").render(true);
        }
    }
</script>