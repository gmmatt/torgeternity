<div id="players" class="app {{#if hide}}hidden{{/if}}">
	<h3>
		<i class="fas fa-users"></i>
		{{ localize "PLAYERS.Title" }}
		{{#if showOffline}}
		<i class="players-mode fas fa-angle-up"></i>
		{{else}}
		<i class="players-mode fas fa-angle-down"></i>
		{{/if}}

	</h3>

	{{#if self.isGM}}
	<p class=" flexrow">
		<i class="players-popout far fa-window-restore" title="{{localize
			'torgeternity.iconeTitles.openParty'}}"></i>
		<i class="fas fa-bolt possReset" title="{{localize
			'torgeternity.iconeTitles.resetPossibilities'}}"></i>
	</p>
	{{/if}}


	<ol id="player-list">

		{{#each users as |user|}}
		{{log user}}
		<li class="player {{#if user.isGM}}gm{{/if}} " data-user-id="{{user._id}}">
			<span class="player-active {{#if user.active}}active{{else}}inactive{{/if}}"
				style="background: {{user.color}}; border: 1px solid {{user.border}}"></span>
			<span class="player-name {{#if user.isSelf}}self{{/if}}">
				{{user.name}}
				{{#if user.isGM}}
				[GM]
				{{else if user.charname}}
				[{{user.charname}}]
				{{/if}}


			</span>

			<span class="posibilities"
				title="{{#if user.isGM}}GM's possibility pool
				{{else}}character's possibilities{{/if}}">

				<em class="possValue">
					{{#if user.character}}
					{{#unless user.isGM}}
					{{user.characterPossibilities}}
					{{/unless}}
					{{/if}}
					{{#if this.isGM}}
					{{../GMpossibilities}}
					{{/if}}
				</em>
				{{#if ../self.isGM}}
				<em class="possAdd" data-target-id="{{#if
					user.isGM}}GMpossibilities{{else}}{{user.character}}{{/if}}">
					<i class="fas fa-plus-circle"></i>
				</em>
				<em class="possMinus" data-target-id="{{#if
					user.isGM}}GMpossibilities{{else}}{{user.character}}{{/if}}">
					<i class="fas fa-minus-circle"></i>
				</em>


			</span>
			{{/if}}

		</li>

		{{/each}}
	</ol>

</div>
